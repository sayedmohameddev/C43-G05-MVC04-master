@model CreatedDepartmentDTO
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="form-label" asp-for="code"> Code </label>
        <input asp-for="code" class="form-control" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Name"> Name </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="CreationDate"> Creation Date </label>
        <input type="date" asp-for="CreationDate" class="form-control" type="date" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>

   <div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">
            back to List
        </a>
   </div>
</form>
